<UserControl x:Class="InputEditor.User_Control.ControllerElement_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InputEditor.User_Control"
             mc:Ignorable="d" Height="54" Width="546">
    <Viewbox>
        <Grid HorizontalAlignment="Center" Width="354">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Slider x:Name="ActivationThresholdSlider" HorizontalAlignment="Left" Margin="237,0,0,0" VerticalAlignment="Center" Width="88" Minimum="0.0" Maximum="1.0" Height="18" ValueChanged="ActivationThreshold_ValueChanged"/>
            <TextBox x:Name="ElementNameBox" HorizontalAlignment="Left" Text="Element Name" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextChanged="ElementNameBox_TextChanged"/>
            <Label x:Name="SliderLabel" Content="Activation Threshold" HorizontalAlignment="Left" Margin="125,0,0,0" VerticalAlignment="Center" FontSize="8" Width="110" />
        </Grid>
    </Viewbox>
</UserControl>
